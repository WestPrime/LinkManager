<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LinkManager"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="LinkManager.MainWindow"
        Title="Менеджер связей Revit" 
        MinHeight="500" 
        MinWidth="1000"
        FontFamily="Segoe UI"
        FontSize="14"
        Background="#F0F0F0" Width="1178">

    <Window.Resources>
        <!-- Общие стили -->
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="100"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>

        <!-- Стиль для ListView -->
        <Style TargetType="{x:Type ListView}" x:Key="ModernListView">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <!-- Шаблон для статусов -->
        <DataTemplate x:Key="StatusTemplate">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" Margin="0 0 5 0"/>
                <TextBlock Text="{Binding Status}"/>
            </StackPanel>
        </DataTemplate>

        <!-- Шаблон для кнопок действий -->
        <!--нужен функционал для комбобокса: обновить, выгрузить, удалить-->
        <DataTemplate x:Key="ActionTemplate">
            <ComboBox ItemsSource="{Binding Options}" SelectedItem="{Binding SelectedOption}" DisplayMemberPath="Text"
            Style="{StaticResource {x:Type ComboBox}}" Padding="6 2" MinWidth="80">
                <!-- Стиль для элементов выпадающего списка -->
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{Binding ActionColor}"/>
                        <Setter Property="Padding" Value="10 4"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <Border Grid.Row="0" Background="White" Padding="10" CornerRadius="4" Margin="0 0 0 10">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="NameSearchField" Width="600" Text="Укажите путь в формате D:\....\...." 
                         Foreground="#666666" Padding="5,0,0,0" VerticalContentAlignment="Center" Margin="0,0,0,0" TextChanged="NameSearchField_TextChanged"/>
                <!--тут имя кнопки не поменяно, нужен функционал выбора папки:-->
                <Button x:Name="ChooseFileButton" Content="Обзор..." Margin="15,0,0,0" Width="110" FontWeight="SemiBold" Click="ChooseFileButton_Click" FontSize="14">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF2AA4D0"/>
                            <GradientStop Color="#FF1423AF" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - Файлы -->
            <GroupBox Header="Добавление связей" Grid.Column="0" Padding="5">
                <ListView x:Name="FilesListView" Style="{StaticResource ModernListView}"
                          ItemsSource="{Binding FileItems}" av:ItemsSource="{av:SampleData ItemCount=5}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="" Width="50">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="Все" 
                                      IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=ListView}, Mode=TwoWay}"
                                      Command="{Binding DataContext.ToggleAllCommand}"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Имя файла" Width="220" 
                                            DisplayMemberBinding="{Binding FileName}"/>
                            <GridViewColumn Header="Путь" Width="290"
                                            DisplayMemberBinding="{Binding Path}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <!-- Правая панель - Связи -->
            <GroupBox Header="Связи в проекте" Grid.Column="2" Padding="5">
                <ListView x:Name="LinksListView" Style="{StaticResource ModernListView}"
                          ItemsSource="{Binding LinkItems}" av:ItemsSource="{av:SampleData ItemCount=5}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="" Width="50">
                                <GridViewColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="Все" 
                                      IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=ListView}, Mode=TwoWay}"
                                      Command="{Binding DataContext.ToggleAllCommand}"/>
                                    </DataTemplate>
                                </GridViewColumn.HeaderTemplate>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Имя связи" Width="200" 
                                            DisplayMemberBinding="{Binding LinkName}"/>
                            <GridViewColumn Header="Статус" Width="130" 
                                            CellTemplate="{StaticResource StatusTemplate}"/>
                            <GridViewColumn Header="Действие" Width="130" 
                                            CellTemplate="{StaticResource ActionTemplate}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="White" Padding="10" CornerRadius="4" Margin="0 10 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Поле слева -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Width="490">
                    <!--имя кнопки тут не поменяно, функция при клике тоже:-->
                    <Button x:Name="RefreshAllButton" Width="200" FontSize="24" Content="Добавить&#xA;   связи" Margin="0 0 10 0" BorderBrush="Black" Click="RefreshAllButton_Click">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFA5A5A5"/>
                                <GradientStop Color="#FF3E3E3E" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <GroupBox Header="Тип размещения" Margin="10 0 20 0" Width="250">
                        <StackPanel>
                            <RadioButton x:Name="ByCommonCoordinatesRadio" Content="По общим координатам" Margin="0 2"/>
                            <RadioButton x:Name="ByBasePointRadio" Content="По базовой точке" Margin="0 2"/>
                            <RadioButton x:Name="AlignInnerBeginningsRadio" Content="Совмещение внутренних начал" Margin="0 2"/>
                            <RadioButton x:Name="GetCoordinatesFromModelRadio" Content="Получить координаты из модели" Margin="0 2"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

                <!-- Поле справа -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Width="450">
                    <!--имя кнопки тут не поменяно, функция при клике тоже:-->
                    <Button x:Name="UnloadAllButton" Width="200" FontSize="24" Content="Выполнить&#xA;  действие" Style="{StaticResource {x:Type Button}}" Margin="15,0,0,0" Click="UnloadAllButton_Click">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF2AA4D0"/>
                                <GradientStop Color="#FF1423AF" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <StackPanel Margin="20 15 0 0" Width="200">
                        <CheckBox x:Name="SavePositionsCheckbox" Content="Сохранить положения" Margin="0 5" Checked="SavePositionsCheckbox_Checked"/>
                        <CheckBox x:Name="TransferCoordinatesRadio" Content="Передать координаты" Margin="0 5" Checked="TransferCoordinatesRadio_Checked"/>
                        <CheckBox x:Name="ShowOnlyProblemsCheckbox" Content="Показать только проблемы" Margin="0 5" Checked="ShowOnlyProblemsCheckbox_Checked"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>