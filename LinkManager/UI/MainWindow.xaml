<Window x:Class="LinkManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LinkManager"
        Title="Менеджер связей Revit" 
        Height="600" 
        Width="1153"
        FontFamily="Segoe UI"
        FontSize="14"
        Background="#F0F0F0">

    <Window.Resources>
        <!-- Общие стили -->
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="100"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
        </Style>

        <!-- Стиль для ListView -->
        <Style TargetType="ListView" x:Key="ModernListView">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <!-- Шаблон для статусов -->
        <DataTemplate x:Key="StatusTemplate">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" Margin="0 0 5 0"/>
                <TextBlock Text="{Binding Status}"/>
            </StackPanel>
        </DataTemplate>

        <!-- Шаблон для кнопок действий -->
        <DataTemplate x:Key="ActionTemplate">
            <Button Content="{Binding ActionText}" 
                    Command="{Binding DataContext.ActionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding}"
                    Style="{StaticResource {x:Type Button}}"
                    Padding="6 2"
                    Background="{Binding ActionColor}"
                    MinWidth="80"/>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель инструментов -->
        <Border Grid.Row="0" Background="White" Padding="10" CornerRadius="4" Margin="0 0 0 10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ChooseFileButton" Content="Выбрать файл" Width="140" FontWeight="SemiBold" Click="ChooseFileButton_Click">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF00BBFF"/>
                            <GradientStop Color="#FF000E93" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <CheckBox x:Name="SubdirectorySearchCheckbox" Content="Поиск в поддиректориях" Margin="20 0 0 0" VerticalAlignment="Center" Checked="SubdirectorySearchCheckbox_Checked"/>
                <TextBox x:Name="NameSearchField" Width="600" Text="Поиск по имени..." 
                         Foreground="#666666" Padding="0,0,0,0" VerticalContentAlignment="Center" Margin="20,0,0,0" TextChanged="NameSearchField_TextChanged"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель - Файлы -->
            <GroupBox Header="Файлы в проекте" Grid.Column="0" Padding="5">
                <ListView x:Name="FilesListView" Style="{StaticResource ModernListView}"
                          ItemsSource="{Binding FileItems}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Имя файла" Width="250" 
                                            DisplayMemberBinding="{Binding FileName}"/>
                            <GridViewColumn Header="Путь" Width="300" 
                                            DisplayMemberBinding="{Binding Path}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>

            <!-- Правая панель - Связи -->
            <GroupBox Header="Связи" Grid.Column="2" Padding="5">
                <ListView x:Name="LinksListView" Style="{StaticResource ModernListView}"
                          ItemsSource="{Binding LinkItems}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Имя связи" Width="150" 
                                            DisplayMemberBinding="{Binding LinkName}"/>
                            <GridViewColumn Header="Статус" Width="150" 
                                            CellTemplate="{StaticResource StatusTemplate}"/>
                            <GridViewColumn Header="Действие" Width="150" 
                                            CellTemplate="{StaticResource ActionTemplate}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="White" Padding="10" CornerRadius="4" Margin="0 10 0 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="RefreshAllButton" Width="200" FontSize="26" Content="Обновить&#10;      все" Margin="0 0 10 0" BorderBrush="Black" Click="RefreshAllButton_Click">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF0057FF"/>
                                <GradientStop Color="#FF003293" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="UnloadButton" Width="200" FontSize="26" Content="Выгрузить" Style="{StaticResource {x:Type Button}}" Margin="0 0 0 0" Click="UnloadButton_Click">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF979797"/>
                                <GradientStop Color="#FF4D4D4D" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="DeleteButton" Width="200" FontSize="26" Content="Удалить" Style="{StaticResource {x:Type Button}}" Margin="10 0 0 0" Click="DeleteButton_Click">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF2626"/>
                                <GradientStop Color="#FF950000" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <GroupBox Header="Тип размещения" Margin="0 0 20 0" Width="244">
                        <StackPanel>
                            <RadioButton x:Name="ByCommonCoordinatesRadio" Content="По общим координатам" Margin="0 2"/>
                            <RadioButton x:Name="ByBasePointRadio" Content="По базовой точке" Margin="0 2"/>
                            <RadioButton x:Name="AlignInnerBeginningsRadio" Content="Совмещение внутренних начал" Margin="0 2"/>
                            <RadioButton x:Name="GetCoordinatesFromModelRadio" Content="Получить координаты из модели" Margin="0 2"/>
                        </StackPanel>
                    </GroupBox>

                    <StackPanel Margin="20 0 0 0" Width="198">
                        <CheckBox x:Name="SavePositionsCheckbox" Content="Сохранить положения" Margin="0 5" Checked="SavePositionsCheckbox_Checked"/>
                        <CheckBox x:Name="TransferCoordinatesRadio" Content="Передать координаты" Margin="0 5" Checked="TransferCoordinatesRadio_Checked"/>
                        <CheckBox x:Name="ShowOnlyProblemsCheckbox" Content="Показать только проблемы" Margin="0 5" Checked="ShowOnlyProblemsCheckbox_Checked"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>